@model FlyByNight.Models.ParcelModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send a Parcel</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Parcel Details</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sender)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sender)
            @Html.ValidationMessageFor(model => model.Sender)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SenderAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SenderAddress)
            @Html.ValidationMessageFor(model => model.SenderAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Receiver)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Receiver)
            @Html.ValidationMessageFor(model => model.Receiver)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ReceiverAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ReceiverAddress)
            @Html.ValidationMessageFor(model => model.ReceiverAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Message)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Message)
            @Html.ValidationMessageFor(model => model.Message)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
